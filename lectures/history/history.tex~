\begin{frame}\frametitle{Home computer games, 1990's}
\bc
\cc{0.4}
\grf{0.7\tw}{doombox.png}

\hfill\grf{0.7\tw}{warcraftbox.png}
\cc{0.6}
\bi
\item 1993: {\em Doom}, FPS
\item 1993: {\em Myst}
\item 1994: {\em Warcraft}, RTS
\item 1996: {\em Quake}, internet play
\item 1996:  3d accelerator cards
\ei
\ec
\end{frame}
\begin{frame}\frametitle{Decline and Rebirth of Arcades}
\bc
\cc{0.5}
\grf{\tw}{ddr.png}
\cc{0.5}
\bi
\item Home video games rival quality
\item Seedy video arcades decline
\item Family oriented video arcades arise
\item 1998: Dance Dance Revolution
\ei
\ec
\end{frame}

