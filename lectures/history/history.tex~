\begin{pspicture}(0,0)(0,0)
\rput(#1){\resizebox{#2}{!}{\includegraphics{#3}}}
\end{pspicture}
}
\newcommand{\graphicbox}[3]{
\begin{pspicture}(0,0)(0,0)
\rput(#1){\fbox{\resizebox{#2}{!}{\includegraphics{#3}}}}
\end{pspicture}
}

