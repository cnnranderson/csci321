import GM

screensize = (640,480)
spritesize = GM.vector((32,32))

rightvelocity = GM.vector((4,0))
downvelocity  = GM.vector((0,4))
leftvelocity  = GM.vector((-4,0))
upvelocity    = GM.vector((0,-4))
velocities = (rightvelocity, downvelocity, leftvelocity, upvelocity)

zerovelocity  = GM.vector((0,0))

